<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    android:textColor="@color/grey">

    <!-- Vehicle Details Title -->
    <TextView
        android:id="@+id/details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#9D424242"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentTop="true"/>

    <!-- Inventory Section -->
    <LinearLayout
        android:id="@+id/inventory_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/details_title"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@drawable/rounded_edittext">

        <!-- Vehicle Model -->
        <EditText
            android:id="@+id/et_vehicle_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="vehicle_model"
            android:textColorHint="@color/hint"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <!-- Vehicle License -->
        <EditText
            android:id="@+id/et_vehicle_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="vehicle_license"
            android:textColorHint="@color/hint"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <!-- Vehicle Capacity -->
        <EditText
            android:id="@+id/et_vehicle_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Capacity"
            android:textColorHint="@color/hint"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save_vehicle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</RelativeLayout>
